{
  "compilerOptions": {
    "esModuleInterop": true, // import * as React from 'react';를 그냥 import React from 'react';로 쓸수 있게끔 해줌.
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    // 절대경로
    "baseUrl": ".",
    "paths": {
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@typings/*": [
        "typings/*"
      ]
    }
  }
}